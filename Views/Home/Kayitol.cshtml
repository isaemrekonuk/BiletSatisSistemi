@{
    ViewData["Title"] = "Kayitol";
}

<div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="/home"><i class="fa fa-home"></i> Ana Sayfa</a>
                        <span>Kayıt Ol</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Form Section Begin -->

    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="register-form">
                        <h2>Kayıt Ol</h2>
                        <form action="#">
                            <div class="group-input">
                                <label for="username">Email Adresi *</label>
                                <input type="text" id="username">
                            </div>
                            <div class="group-input">
                                <label for="pass">Şifre *</label>
                                <input type="text" id="pass">
                            </div>
                            <div class="group-input">
                                <label for="con-pass">Tekrar Şifre *</label>
                                <input type="text" id="con-pass">
                            </div>
                            <button type="submit" class="site-btn register-btn">Kayıt Ol</button>
                        </form>
                        <div class="switch-login">
                            <a href="/login" class="or-login">Veya Giriş Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>